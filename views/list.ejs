    <%- include("header") -%>
    <div class="box" id="heading">
        <h1 style="color: #FC345C;"> <%= listTitle %> </h1>
    </div>
    <div class="box">
        <% work.forEach(value => { %>
        <!-- <div class="item"> -->
              <form class="item" action="/delete"  method="post">  
                <input type="checkbox" name="checkbox"  value="<%=value._id %>"  onChange="this.form.submit()">
                <p><%= value.name %></p> 
                <input type="hidden" name="del" value="<%= listTitle %>">
              </form>
        <!-- </div>  -->
        <% }); %> 

        <form class="item" action="/" method="post">
            <input type="text" name="todo" placeholder="Enter your task" autocomplete="off">
            <button type="submit" name="list" value="<%=listTitle%>">+</button>
        </form>  
    </div>
    <%- include("footer") -%> 
    

 
